{
  "name": "@yngvenot-platform/frontend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "npm run build:wasm && next dev",
    "build:wasm": "cd ../wasm-app && wasm-pack build --target web --out-dir ../frontend/src/wasm && cd ../frontend",
    "build": "if [ \"$VERCEL\" != \"1\" ] && [ \"$SKIP_WASM\" != \"1\" ]; then npm run build:wasm; fi && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.33.0",
    "@clerk/themes": "^2.4.22",
    "@tailwindcss/postcss": "^4.1.13",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "mime-types": "^3.0.1",
    "next": "15.5.7",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.3.0",
    "swr": "^2.3.6",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
